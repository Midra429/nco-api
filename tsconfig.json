{
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true
  }
}
